{
  "$id": "TODO, after pushing",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Post comment request",
  "type": "object",
  "definitions": {
    "authorization": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "minLength": 1
        },
        "tokenProvider": {
          "type": "string",
          "enum": ["Google"]
        }
      },
      "required": ["token", "tokenProvider"]
    }
  },
  "properties": {
    "url": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "inReplyTo": {
      "$ref": "comment.schema.json#/definitions/commentId"
    },
    "authorization": {
      "$ref": "#/definitions/authorization"
    }
  },
  "required": ["url", "comment", "authorization"]
}