{
    "$id": "https://github.com/michaelboyles/flamewars/blob/develop/schemas/comment.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Comment",
    "type": "object",
    "definitions": {
        "commentId": {
            "type": "string",
            "minLength": 1
        },
        "author": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "portraitUrl": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": ["id", "name"],
            "additionalProperties": false
        }
    },
    "properties": {
        "id": {
            "$ref": "#/definitions/commentId"
        },
        "author": {
            "$ref": "#/definitions/author"
        },
        "text": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
            "type": "string",
            "enum": ["normal", "edited", "deleted"]
        },
        "replies": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "votes": {
            "type": "object",
            "properties": {
                "up": {
                    "type": "integer",
                    "minimum": 0
                },
                "down": {
                    "type": "integer",
                    "minimum": 0
                },
                "myVote": {
                    "type": "string",
                    "enum": ["up", "down"],
                    "description": "The direction the current user has voted on this comment. Absent if none"
                }
            },
            "required": ["up", "down"],
            "additionalProperties": false
        }
    },
    "required": ["id", "author", "text", "timestamp", "status", "replies", "votes"],
    "additionalProperties": false
}