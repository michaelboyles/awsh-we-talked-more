{
    "$id": "https://github.com/michaelboyles/flamewars/blob/develop/schemas/comment.schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Comment",
    "type": "object",
    "definitions": {
        "commentId": {
            "type": "string",
            "minLength": 1
        },
        "author": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "portraitUrl": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": ["id", "name"]
        }
    },
    "properties": {
        "id": {
            "$ref": "#/definitions/commentId"
        },
        "author": {
            "$ref": "#/definitions/author"
        },
        "text": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "isEdited": {
            "type": "boolean"
        },
        "replies": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        }
    },
    "required": ["id", "author", "text", "timestamp", "isEdited", "replies"],
    "additionalProperties": false
  }